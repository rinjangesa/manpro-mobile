<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/main_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_wall" />

    <ImageView
        android:id="@+id/main_character"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_header"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/main_menu"
        android:scaleType="fitCenter"
        android:src="@drawable/placeholder_char" />

    <ImageView
        android:id="@+id/main_decoration"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/main_footer"
        android:layout_alignEnd="@+id/main_character"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/main_header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/custom_container"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/main_current_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:scaleType="fitCenter"
            android:src="@drawable/button_profile" />

        <android.support.v7.widget.CardView
            android:id="@+id/main_current_profiles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.9"
            android:background="@color/colorPrimary"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/level_user"
                    android:layout_alignParentTop="true"
                    android:text="Lv" />

                <TextView
                    android:id="@+id/level_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/coin"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@id/level_user"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_coin" />

                <TextView
                    android:id="@+id/money_user"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/coin"
                    android:gravity="center_vertical"
                    android:text="0" />

                <TextView
                    android:id="@+id/exp"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="6dp"
                    android:layout_toEndOf="@id/level_user"
                    android:gravity="center_vertical"
                    android:text="EXP" />

                <ProgressBar
                    android:id="@+id/experience_user"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@id/exp" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <ImageButton
            android:id="@+id/main_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:scaleType="fitCenter"
            android:src="@drawable/button_setting" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_menu"
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/custom_container"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/main_kanji"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:scaleType="fitCenter"
            android:src="@drawable/button_kanji" />

        <ImageButton
            android:id="@+id/main_phrase"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:scaleType="fitCenter"
            android:src="@drawable/button_phrase" />

        <ImageButton
            android:id="@+id/main_grammar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:scaleType="fitCenter"
            android:src="@drawable/button_grammar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_footer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_container"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageButton
            android:id="@+id/main_shop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:contentDescription="shop"
            android:scaleType="fitCenter"
            android:src="@drawable/button_shop" />

        <ImageButton
            android:id="@+id/main_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:contentDescription="item"
            android:scaleType="fitCenter"
            android:src="@drawable/button_item" />

        <ImageButton
            android:id="@+id/main_basic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:contentDescription="basic"
            android:scaleType="fitCenter"
            android:src="@drawable/button_basic" />

        <ImageButton
            android:id="@+id/main_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:contentDescription="events"
            android:scaleType="fitCenter"
            android:src="@drawable/button_events" />

        <ImageButton
            android:id="@+id/main_ranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:contentDescription="ranking"
            android:scaleType="fitCenter"
            android:src="@drawable/button_ranking" />

    </LinearLayout>

    <TextView
        android:id="@+id/new_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/main_character"
        android:background="@drawable/button_red"
        android:padding="3dp"
        android:text="New Messages"
        android:textColor="#ffffff"
        android:visibility="invisible" />

</RelativeLayout>