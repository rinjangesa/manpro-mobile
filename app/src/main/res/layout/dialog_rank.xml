<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    app:cardCornerRadius="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rank_dialog_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/placeholder_char" />

        <TextView
            android:id="@+id/rank_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rank_dialog_img"
            android:layout_centerHorizontal="true"
            android:text="Name"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rank_dialog_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rank_dialog_name"
            android:layout_centerHorizontal="true"
            android:text="Score"
            android:textAlignment="center" />

        <Button
            android:id="@+id/rank_dialog_see"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rank_dialog_score"
            android:layout_centerHorizontal="true"
            android:text="See Profile" />

        <Button
            android:id="@+id/rank_dialog_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rank_dialog_see"
            android:layout_centerHorizontal="true"
            android:text="Close" />

    </RelativeLayout>

</android.support.v7.widget.CardView>