<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PronunciationActivity">

    <ImageView
        android:id="@+id/pronuncation_list_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_wall" />

    <LinearLayout
        android:id="@+id/pronunciation_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_container"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/back_pronunciation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@drawable/button_blue"
            android:text="Back" />

        <TextView
            android:id="@+id/pronunciation_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Pronunciation"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expand_list_pronunciation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pronunciation_header"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_container"
        android:textAlignment="center"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pronunciation_header"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/vokal_panjang_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:text="Vokal Panjang"
            android:textColor="#1a237e"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dengan_n_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_yellow"
            android:text="dengan ん"
            android:textColor="#827717"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dengan_tsu_kecil_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_green"
            android:text="dengan っ (tsu kecil)"
            android:textColor="#1b5e20"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dengan_y_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_red"
            android:text="dengan ゃ、ゅ、ょ"
            android:textColor="#801c15"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>