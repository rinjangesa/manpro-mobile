<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shop_buy_full"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/shop_buy_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/shop_buy_japanname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_buy_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="なまえ" />

            <TextView
                android:id="@+id/shop_buy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_buy_japanname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="name" />

            <TextView
                android:id="@+id/shop_buy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_buy_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="price" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/shop_buy_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@id/shop_buy_price"
                android:src="@drawable/icon_coin" />

            <TextView
                android:id="@+id/shop_buy_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_buy_price"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="effect" />

            <Button
                android:id="@+id/shop_buy_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_buy_effect"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Buy" />

            <Button
                android:id="@+id/shop_buy_close_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_buy_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Close" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>