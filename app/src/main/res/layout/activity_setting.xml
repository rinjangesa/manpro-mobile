<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <ImageView
        android:id="@+id/setting_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_wall" />

    <LinearLayout
        android:id="@+id/setting_header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/custom_container"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/setting_current_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:scaleType="fitCenter"
            android:src="@drawable/button_profile"
            android:visibility="invisible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.9"
            android:background="@color/colorTransparent" />

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:scaleType="fitCenter"
            android:src="@drawable/button_home" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/setting_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/setting_header"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_container">

        <TextView
            android:id="@+id/change_lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Change Language"
            android:textAlignment="center"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/change_language_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/change_lang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/radio_english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_eng"
                android:onClick="onRadioButtonClicked"
                android:text="English" />

            <Button
                android:id="@+id/radio_indonesia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_indo"
                android:onClick="onRadioButtonClicked"
                android:text="Indonesia" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_layout_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/setting_layout_center"
            android:layout_below="@+id/change_language_group"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/setting_music_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Music"
                    tools:ignore="NestedWeights" />

                <SeekBar
                    android:id="@+id/setting_music_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/setting_bgm_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sound"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    tools:ignore="NestedWeights" />

                <SeekBar
                    android:id="@+id/setting_bgm_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/setting_mute_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mute"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    tools:ignore="NestedWeights" />

                <CheckBox
                    android:id="@+id/setting_mute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onCheckboxClicked" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_layout_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/setting_btn_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_login"
                android:text="Help"
                android:visibility="gone" />

            <Button
                android:id="@+id/setting_btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_login"
                android:text="Change Password" />

            <Button
                android:id="@+id/setting_btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_login"
                android:text="Logout" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>