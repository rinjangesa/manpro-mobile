<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPronunciationActivity">

    <ImageView
        android:id="@+id/detail_pronuncitaion_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_wall" />

    <TextView
        android:id="@+id/detail_pronunciation_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/custom_container"
        android:gravity="center" />

    <WebView
        android:id="@+id/detail_pronunciation_desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/back_btn"
        android:layout_below="@id/detail_pronunciation_title"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_container"
        android:padding="10dp" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="back" />

</RelativeLayout>