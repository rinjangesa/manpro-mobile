<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="#ffcc80"
    app:cardCornerRadius="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialog_basic_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Learn the Basic"
            android:textColor="#3e2723"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/dialog_basic_close"
            android:layout_below="@id/dialog_basic_title"
            android:orientation="vertical">

            <Button
                android:id="@+id/dialog_basic_kana"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/dialog_basic_title"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_red"
                android:text="Kana"
                android:textColor="#b71c1c"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_basic_pronoun"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/dialog_basic_title"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_yellow"
                android:text="pronunciation"
                android:textColor="#827717"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_basic_phrases"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/dialog_basic_kana"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_green"
                android:text="Phrases"
                android:textColor="#2e7d32"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_basic_particles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/dialog_basic_phrases"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_blue"
                android:text="Grammar"
                android:textColor="#01579b"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/dialog_basic_close"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Close"
            android:textColor="#3e2723"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>