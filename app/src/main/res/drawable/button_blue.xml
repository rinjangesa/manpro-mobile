<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <stroke android:width="1dp" android:color="#c4e5ff" />
            <corners android:radius="5dp" />
            <solid android:color="#fdfdfd" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="#c4e3ff" />
            <corners android:radius="5dp" />
            <solid android:color="#fdfdfd" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#76c1ff" />
            <corners android:radius="5dp" />
            <solid android:color="#6ab4f2" />
        </shape>
    </item>
</selector>